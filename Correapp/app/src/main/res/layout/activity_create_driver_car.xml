<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.CreateTripActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        style="@style/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="300dp">

        <ImageView
            android:id="@+id/back_arrow"
            style="@style/HeaderArrow" />

        <TextView
            style="@style/HeaderTitle"
            android:text="Alta chofer" />

    </LinearLayout>


    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:text="Datos del auto:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black_87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout" />

    <LinearLayout
        android:id="@+id/inputs"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="#FFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:weightSum="8"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Marca"
            android:textColorHint="@color/black_overlay"
            android:textColor="@color/black_overlay" />

        <EditText
            android:id="@+id/modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:backgroundTint="#000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Modelo"
            android:textColorHint="@color/black_overlay"
            android:textColor="@color/black_overlay" />


        <EditText
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:backgroundTint="#000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Color"
            android:textColorHint="@color/black_overlay"
            android:textColor="@color/black_overlay" />

        <EditText
            android:id="@+id/registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:backgroundTint="#000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:inputType="number"
            android:textColorHint="@color/black_overlay"
            android:hint="Número de registro de conducir"
            android:textColor="@color/black_overlay" />

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:weightSum="3"
           >

            <TextView
                android:id="@+id/empty3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="2.5"
                android:backgroundTint="#000"
                android:textColor="#FFF" />

            <Button
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="AGREGAR FOTO"
                android:textSize="8dp"/>

        </LinearLayout>
        <EditText
            android:id="@+id/seguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:backgroundTint="#000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Número de seguro"
            android:textColorHint="@color/black_overlay"

            android:textColor="@color/black_overlay" />


        <EditText
            android:id="@+id/patente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/text_border_bottom_line"
            android:backgroundTint="#000"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColorHint="@color/black_overlay"
            android:hint="Patente"
            android:textColor="@color/black_overlay" />
        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toTopOf="@+id/confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputs">

            <TextView
                android:id="@+id/empty2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="2.5"
                android:backgroundTint="#000"
                android:textColor="#FFF" />

            <Button
                style="@style/AppButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="AGREGAR FOTO"
                android:textSize="8dp"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        style="@style/AppButton"
        android:text="Finalizar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="296dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/inputs"
        app:layout_constraintTop_toTopOf="@+id/inputs" />


</android.support.constraint.ConstraintLayout>